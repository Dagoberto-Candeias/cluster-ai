# Cluster AI Environment Configuration

# Application Settings
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///./cluster_ai.db
# For PostgreSQL: postgresql://user:password@postgres:5432/cluster_ai

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3001

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=cluster-ai@yourdomain.com

# Slack Configuration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#cluster-ai-alerts

# External Services
OLLAMA_BASE_URL=http://localhost:11434
DASK_SCHEDULER_ADDRESS=tcp://localhost:8786
WEBUI_BASE_URL=http://localhost:3001

# Performance Tuning
CACHE_TTL_CLUSTER=30
CACHE_TTL_WORKERS=20
CACHE_TTL_METRICS=15
CACHE_TTL_ALERTS=10

# Resource Limits
MAX_WORKERS=10
MAX_MEMORY_GB=8
MAX_CPU_CORES=4

# Monitoring Thresholds
CPU_THRESHOLD_WARNING=70
CPU_THRESHOLD_CRITICAL=90
MEMORY_THRESHOLD_WARNING=75
MEMORY_THRESHOLD_CRITICAL=90
DISK_THRESHOLD_WARNING=80
DISK_THRESHOLD_CRITICAL=95

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# Docker Configuration
COMPOSE_PROJECT_NAME=cluster-ai
DOCKER_BUILDKIT=1

# Development Settings
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Health Check Script (scripts/utils/health_check.sh)
# Thresholds (%). Ajuste conforme sua infra.
DISK_WARN_THRESHOLD=80
DISK_CRIT_THRESHOLD=90
MEM_WARN_THRESHOLD=85
MEM_CRIT_THRESHOLD=95
CPU_CRIT_THRESHOLD=90
WORKER_DISK_CRIT_THRESHOLD=95

# Docker services list to check (container name substrings, space-separated)
# Observação: use substrings dos nomes dos containers (ex.: "backend", "redis")
# O scripts/utils/health_check.sh considera correspondência por substring ao listar containers.
DOCKER_SERVICES="frontend backend redis prometheus grafana"
